extends pugTemplates/basic.pug
block head
    title Submit a learning resource â€” Ct.js
block body
    section.blue.gradient
        .inner.center
            h1 Submit a learning resource
    section#contact
        .inner
            .c2
            .c8
                form(name="learningResources" method="POST" netlify netlify-honeypot="title")
                    p.flytrap
                        label
                            b Do you see this field? You shouldn't.
                            input(type="text" name="title")
                    p.fifty.npl
                        label
                            b Your Name: *
                            input.wide(type="text" name="name" required="required")
                    p.fifty.npr
                        label
                            b Your Email (used only to contact you back): *
                            input.wide(type="email" name="email" required="required")
                    .clear
                    p.nmt
                        label
                            b Link to the learning resource: *
                            input.wide(type="url" name="link" required="required")
                        span It can be a youtube video, a blog post, documentation, etc.
                    p.npl
                        label
                            b Author of the content: *
                            input.wide(type="text" name="author" required="required")
                    p.nmt
                        label
                            b Short description: *
                            textarea.wide(name="desc" required="required")
                        span A couple sentences will be enough. Tell what is discussed and what readers/viewers will achieve with this learning resource.
                    p.nmt
                        label
                            b Anything you want to add:
                            textarea.wide(name="message")
                    p.nmt
                        label
                            input(type="checkbox" name="confirmLicensed" required="required")
                            span I confirm that the learning resource I send does not use unlicensed or plagiarized content.
                        br
                        label
                            input(type="checkbox" name="confirmDataDisplay" required="required")
                            span I understand that the information I provide (unless otherwise noted) will be displayed in ct.js engine to unlimited amount of viewers.
                    p.center
                        button(type="submit").nmr
                            svg.feather
                                use(xlink:href="/icons.svg#send")
                            span Send
            .clear