body
    display flex
    flex-flow column nowrap
    min-height 100%
    & > .main
        flex 1 0 auto
footer
    flex 0 0 auto

.blue
    color white
.white
    color text

section
    background white
    &.blue
        background act
        &.gradient
            background linear-gradient(45deg, accent1 0%, act 100%)
        &.gradAlt
            background linear-gradient(45deg, act 0%, accent1 100%)
    &.grey
        background bl
    padding 3rem 0
    &.intro
        padding 6rem 0
#footer
    @extends section
    padding 1rem 0
    background dark
    color bl
.inner
    max-width 1140px
    margin 0 auto
    width 95%
    &.limited
        max-width 720px
nav
    position fixed
    background act
    top 0
    left 0
    right 0
    padding 0.75rem 6rem
    color white
    z-index 999
    line-height 0
    {trans}
    &.above
        background transparent
    img
        height 2.75rem
        {trans}
    .toright a
        padding 0.5rem 0
    &.below
        img
            height 2rem
        .toright a
            padding 0.25rem 0
nav, #footer
    a
        text-decoration none
        display inline-block
        span
            margin-left 0.5rem
        & + a
            margin-left 2rem
        i 
            color white
        &:hover
            color white
            opacity 0.65
.aCard
    background white
    {shad}
    padding 1rem 1.5rem
    margin 1rem 0
    border-radius brsmall
    {trans}
    &:hover
        {shadamb}
.aCardMedia
    margin -1rem -1.5rem 1rem -1.5rem
    position relative
    img
        {trans}
        opacity 1
        width 100%
        border-radius brsmall brsmall 0 0
    .aCard:hover &
        button, .button
            opacity 1
        img
            opacity 0.65
.aCardButton
    display flex
    justify-content center
    align-items center
    width 100%
    height 100%
    left 0
    top 0
    position absolute
    button, .button
        opacity 0

.anEssencial
    display flex
    flex-flow row nowrap
    align-items center
    padding 2rem 1rem
    p
        font-size 1.5rem
        line-height 1.5
        margin 0 0 0 1.5rem
    i 
        flex 0 0 auto
        font-size 4rem

.ShareButtons
    padding 2rem 0 0
    a
        display inline-block
        background linear-gradient(45deg, accent1 0%, act 100%)
        padding 0.75rem
        border-radius br
        line-height 0
        & + a
            margin-left 1rem
        {trans}
        &:hover
            opacity 0.65
    img
        width 3rem
        height 3rem