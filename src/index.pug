extends pugTemplates/basic.pug
block head
    title Ct.js — a free game editor
    meta(name="description" content="A free 2D game editor based on web technologies.")
block body
    section.intro#intro.blue.gradient
        .inner
            .c5.breakon640
                img(src="/img/logoWhite.png" title="A ct.js logo. Ct.js is a free alternative to Game Maker, Construct and others")
            .c7.breakon640
                h1.nmt.npb
                    em Your new 2D game editor
                p.big.
                    ct.js aims to make learning programming fun
                    and game development easy by its visual editors
                    and well-documented code library. It is available
                    for Windows, Linux, and Mac.
                div
                    a.button.nml(href="/download")
                        i.icon-save
                        span=`Download ${downloads.version}`
                    a.button.dim(href="https://discord.gg/CggbPkb" target="_blank")
                        i.icon-discord
                        span   Discord
                    a.button.dim(href="https://github.com/ct-js/ct-js" target="_blank")
                        i.icon-github
                        span   GitHub
            .clear
    section#features
        .inner
            .aFeatureList
                .aFeature.c4.center.breakon800
                    div
                        i.icon-features.huge
                    h3 Highly extensible
                    p.
                        The core library of ct.js is small but powerful
                        and can be easily extended in one click by modules.
                        You can write your own modules, too!
                .aFeature.c4.center.breakon800
                    div
                        i.icon-smile-face.huge
                    h3 Easy to learn
                    p.
                        ct.js is accessible and ready-to-use for both
                        newbies and pros. It is bundled with examples,
                        tutorials, and docs.
                .aFeature.c4.center.breakon800
                    div
                        i.icon-responsive.huge
                    h3 Games that run everywhere
                    p.
                        Games created with ct.js run in any modern browser,
                        including mobile ones. You can also pack your game
                        as an executable for Windows, Mac, and Linux!
                .clear
    section.blue.gradient#ctjsNext
        .inner
            .c6.npl.breakon960
                h2.npt.nmt Get the newest features of ct.js Next
                p.big.
                    ct.js Next is the preview channel of the upcoming ct.js v1.0.0.
                    It has new major features and QoL improvements.
                p Already includes:
                ul
                    li Pixi.js-based WebGL renderer — ultra-fast!
                    li Skeletal animations with DragonBones support;
                    li Complex collision shapes with transform support;
                    li Multiple selection tools in room editor;
                    li More settings for backgrounds and camera management;
                    li High-quality, automagical fullscreen mode;
                    li New features for catmods.
                a.button(href="/download-next")
                    i.icon-save
                    span=`Download v${downloads.versionNext}`
            .c6.npr.breakon960
                img(src="/img/ctNext.png")
            .clear
    section#slider
        .inner
            h2.center.nmt
                | ct.js is an extensible library
                br
                | coupled with a visual workflow
            p
        .aSlider
            each val in [1, 2, 3, 4, 5, 6, 7]
                img(src=`/img/indexScreenshots/screenshot${val}.png`)
        script(type="text/javascript").
            var opts = {
                controls: false,
                nav: false,

                container: '.aSlider',
                autoplay: true,
                autoplayTimeout: 5000,
                autoplayButton: false,
                autoplayButtonOutput: false,
                mouseDrag: true,
                arrowKeys: true,
                items: 1,
                controls: false,
                gutter: 20,
                edgePadding: 20,
                responsive: {
                    500: {
                        items: 2
                    },
                    1023: {
                        items: 3
                    }
                },
                swipeAngle: false,
                speed: 400
            };
            var slider = tns(opts);
    section.grey#demos
        .inner
            .center
                h2.nmt Our demos
                .hSub Each demo is open-source and is bundled with ct.js
            .aCardList
                +aCard("Greed — a small silly platformer", "/img/demoCatformer.png", "https://comigo.itch.io/catformer")
                    p.
                        Collect all the coins on the map!
                    p.nmb.
                        This demo shows how to create a side-view world
                        by playing sprite animations, transforming copies,
                        creating simple enemies, handling player's
                        keyboard input and detecting collisions.
                +aCard("Catsteroids — a space shooter", "/img/demoCatsteroids.png", "https://comigo.itch.io/catsteroids")
                    p.
                        Fly through space, collect bonuses, earn score points
                        and destroy asteroids and enemy ships!
                    p.nmb.
                        This demo shows how to handle keyboard input,
                        create basic menus, handle collisions
                        and create new objects during the playtime.
                +aCard("Memocats — a memory puzzle", "/img/demoMemocats.png", "https://comigo.itch.io/memocats")
                    p.
                        Find identical cards to clear the board.
                    p.nmb.
                        This demo shows how to play sounds, animate
                        things and use the core ct.js library.
                .clear
                .center
                    a.button.big(href="/madeWithCtjs") Made with ct.js
    section#essencials.blue
        .inner
            h2.center.nmt ct.js has everything you need to build a game
            -
                var essencials = {
                    'drag-n-drop2': 'Room / Level editor with tile support',
                    'code': 'Integrated code editor with error handling',
                    'layers': 'Collision handling, and other libraries',
                    'photos': 'Framed & skeletal animations',
                    'music': 'Music & sound manager',
                    'change-style': 'Styles to reuse GUI settings',
                    'file': 'Notes & docs in a side panel, on every screen',
                    'magic-stick': 'Ability to use custom JavaScript',
                    'rocket': 'Easy packing and deploying'
                }
            .anEssencialsList
                - var i = 0;
                each val, key in essencials
                    .anEssencial.c4.breakon800
                        i(class=`icon-${key}`)
                        p= val
                    - i++;
                    if (i % 3 === 0 && i !== 0)
                        .clear
    section#SOON
        .inner
            h2.center.nmt Coming SOON
            -
                var essencials = {
                    'change-style': 'WebGL Renderer — Out now in ct.js Next!',
                    'drag-n-drop2': 'More versatile tools for manipulating objects in rooms — Out now in ct.js Next!',
                    'image-gallery': 'Basic in-editor image maipulation tools: flipping, resizing, etc.',
                    'cursor-click': 'UI editor'
                }
            .anEssencialsList
                - var i = 0;
                each val, key in essencials
                    .anEssencial.c6.breakon640
                        i(class=`icon-${key}`)
                        p= val
                    - i++;
                    if ((i % 2 === 0 && i !== 0) || i === Object.keys(essencials).length)
                        .clear
                .center
                    a.button(href="https://github.com/ct-js/ct-js/projects/1" target="_blank") See our roadmap
    section#downloadCTA.blue.gradient
        .inner
            .fifty.npl
                .hSub Join the world of game development
                h2.nmt
                    b It's free!
            .fifty.npr.right
                a.button(href="/download")
                    i.icon-save
                    span   Download
            .clear
    section#partners.grey
        .c3.breakon960
        .c6.center.breakon960
            h2.nmt Our Partner

            img#theMiniJamLogo(src="/img/minijamlogo.png")

            p.big.nmb
                | Mini Jam is an open recurring game jam that is held every two weeks on itch.io.
                |
                |
                a(href="https://discord.gg/kgzG645" target="_blank") Join their Discord server
                |
                | or
                |
                a(href="http://minijamofficial.com/" target="_blank") visit their official site
                |!
        .clear
    section#devlog
        .inner.limited
            h2 Devlog
            each item in devlog.posts
                .aDevlogPost
                    h3.nmb
                        a(href=item.link[0])=item.title
                    p.nmt.meta=`Published on ${item.pubDate}`
                    .aPostImage!=item.image
                    a.button.nml(href=item.link[0])
                        i.icon-file
                        span   Read more…
    section#share.grey
        -
            var url = 'https%3A%2F%2Fctjs.rocks%2F',
                title = 'ct.js%20%E2%80%94%20a%20free%20game%20editor';
        .inner.center
            h2.nmt Help ct.js grow!
            .hSub Tell your friends about it
            .ShareButtons
                a(href=`http://www.facebook.com/sharer.php?u=${url}` target="_blank")
                    img(src="/img/facebook.svg")
                a(href=`http://vk.com/share.php?url=${url}` target="_blank")
                    img(src="/img/vk.svg")
                a(href=`https://telegram.me/share/url?url=${url}&text=${title}` target="_blank")
                    img(src="/img/telegram.svg")
                a(href=`https://twitter.com/share?url=${url}&text=${title}` target="_blank")
                    img(src="/img/twitter.svg")
                a(href=`whatsapp://send?text=${url}%20${title}` target="_blank" data-action="share/whatsapp/share")
                    img(src="/img/whatsapp.svg")
                a(href=`http://reddit.com/submit?url=${url}&title=${title}` target="_blank")
                    img(src="/img/reddit.svg")
                a(href=`https://plus.google.com/share?url=${url}` target="_blank")
                    img(src="/img/google_plus.svg")
            br
            a(href="https://www.patreon.com/comigo" target="_blank")
                img(src="/img/become_a_patron_button@2x.png" alt="Support the project on Patreon" title="Support ct.js on Patreon")

mixin aCard(title, image, link)
    .c4.breakon800
        .aCard
            .aCardMedia
                img(src=image)
                .aCardButton
                    a.button(href=link target="_blank")
                        i.icon-play
                        span   Play
            h4.nmt= title
            if block
                block