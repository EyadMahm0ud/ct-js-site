extends pugTemplates/basic.pug
block head
    title Contact â€” Ct.js
    meta(name="description" content="Send an email to the developer.")
block body
    section.blue.gradient
        .inner.center
            h1 Contact
    section#contact
        .inner
            .c2
            .c8
                form(name="contact" method="POST" netlify netlify-honeypot="title")
                    p.flytrap
                        label
                            b Do you see this field? You shouldn't.
                            input(type="text" name="title")
                    p.fifty.npl
                        label
                            b Your Name: *
                            input.wide(type="text" name="name" required="required")
                    p.fifty.npr
                        label
                            b Your Email: *
                            input.wide(type="email" name="email" required="required")
                    .clear
                    p.nmt
                        label
                            b Message: *
                            textarea.wide(name="message" required="required")
                    p.center
                        button(type="submit").nmr
                            svg.feather
                                use(xlink:href="/icons.svg#send")
                            span Send
            .clear